@using RestaurantTestApp.Core
@model Restaurant

<div class="card my-2">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="card-footer d-flex justify-content-end">
        <a class="btn btn-primary" asp-page="./Detail" asp-route-Id="@Model.Id">
            See Details
        </a>
        <a class="btn btn-secondary ml-2" asp-page="./Edit" asp-route-Id="@Model.Id">
            <i class="fa fa-edit"></i>
        </a>
        <a class="btn btn-danger ml-2" asp-page="./Delete" asp-route-Id="@Model.Id">
            <i class="fa fa-trash"></i>
        </a>
    </div>
</div>

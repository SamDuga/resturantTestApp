@page
@model ResturantTestApp.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "List";
}

<h1>Restaurants</h1>

<form>
    <div class="form-group">
        <div class="input-group">
            <input name="searchTerm" placeholder="Search restaurants by name..." type="search" class="form-control" asp-for="@Model.SearchTerm" />
            <span class="input-group-btn">
                <button class="btn btn-primary">
                    <i class="fas fa-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}

@foreach(var restaurant in Model.Restaurants)
{
    <partial name="_Summary" model="restaurant" />
}

<a asp-page="./Edit" class="btn btn-primary">Add New</a>
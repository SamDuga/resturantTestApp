@page
@model ResturantTestApp.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "List";
}

<h1>Restaurants</h1>

<form>
    <div class="form-group">
        <div class="input-group">
            <input name="searchTerm" placeholder="Search restaurants by name..." type="search" class="form-control" asp-for="@Model.SearchTerm" />
            <span class="input-group-btn">
                <button class="btn btn-primary">
                    <i class="fas fa-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Restaurant</th>
            <th>Location</th>
            <th>Cusisine Type</th>
            <th></th>
        </tr>
    </thead>
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td>@restaurant.Name</td>
            <td>@restaurant.Location</td>
            <td>@restaurant.Cuisine</td>
            <td>
                <a class="btn btn-primary" asp-page="./Detail" asp-route-Id="@restaurant.Id">
                    See Details
                </a>
            </td>
            <td>
                <a class="btn btn-secondary" asp-page="./Edit" asp-route-Id="@restaurant.Id">
                    <i class="fa fa-edit"></i>
                </a>
            </td>
        </tr>
    }
</table>

<a asp-page="./Edit" class="btn btn-primary">Add New</a>